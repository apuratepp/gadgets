<%= link_to "Sign out", destroy_user_session_path, method: :delete %>

<h3><%= link_to "My Gadgets", gadgets_path %> (<%= @gadgets.count %>)</h3>

<%= render 'search' %>

<%= link_to "Add a gadget...", new_gadget_path %>

<% if @gadgets.empty? %>
  <div class="alert alert-warning" role="alert">
    No gadgets
  </div>
<% else %>
  <%= render @view_params, locals: {gadgets: @gadgets} %>
<% end %>