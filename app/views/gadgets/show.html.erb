<%= render 'nav' %>

<h1><%= @gadget.name %> detail</h1>

<h2>Pictures (<%= @gadget.pictures.count %>)</h2>

<%= link_to "Add an image...", new_gadget_picture_path(@gadget) %>

<ul>
<% @gadget.pictures.each do |picture| %>
	<li><%= link_to image_tag(picture.image, height: "128"), [@gadget, picture], title: "Click to view" %></li>
<% end %>
</ul>

<hr />

<%= link_to "Edit", edit_gadget_path(@gadget) %> | <%= link_to "Remove", @gadget, method: :delete, data: {confirm: "Are you sure you want to delete this gadget and its pictures"} %>